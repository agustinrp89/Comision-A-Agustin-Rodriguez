<body>
  <header>
    <h1>Proyecto</h1>
    <h2>Â¿Posteos nuevos?</h2>

  </header>
  <div class="container">
    <button id="add-post-btn" class="btn btn-success">Agregar Posts</button>
  </div>
  </header>
  <div id="post-container"></div>
 
  <!-- Modal para editar restaurantes -->
  <div id="edit-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <form id="edit-form">
      <label for="edit-titulo">titulo:</label>
      <input type="text" id="edit-titulo" required>

      <label for="edit-contenido">contenido:</label>
      <textarea type="textarea" id="edit-contenido"></textarea>

      <label for="edit-image">URL de la imagen:</label>
      <input type="text" id="edit-image">

      <label for="edit-link">link:</label>
      <input type="text" id="edit-link">

      <label for="edit-date">Dia:</label>
      <input type="date" id="edit-date">    


      <button type="button" id="save-edit-btn">Guardar cambios</button>
    </form>
  </div>
</div>

  <!-- Modal para agregar un nuevo post -->
<div id="add-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Agregar Nuevo post</h2>
    <form id="add-form">
      <label for="add-titulo">titulo:</label>
      <input type="text" id="add-titulo" required>

      <label for="add-contenido">contenido:</label>
      <textarea type="text" id="add-contenido"></textarea>
    
      <label for="add-image">URL de la imagen:</label>
      <input type="text" id="add-image">

      <label for="add-link">link:</label>
      <input type="text" id="add-link">

      <label for="add-date">Dia:</label>
      <input type="date" id="add-date">

      <button type="button" id="save-add-btn" class="btn btn-primary">Guardar</button>
    </form>
  </div>
</div>

  <script src="../public/css/crud.js"></script>
</body>
</html>